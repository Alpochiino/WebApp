<script>
    function showImage(carImage, imagePaths, currentImageIndex) {
        carImage.src = imagePaths[currentImageIndex];
    }

    function showPreviousImage(carImage, imagePaths, currentImageIndex) {
        if (currentImageIndex > 0) {
            currentImageIndex--;
        } else {
            currentImageIndex = imagePaths.length - 1;
        }
        showImage(carImage, imagePaths, currentImageIndex);
    }

    function showNextImage(carImage, imagePaths, currentImageIndex) {
        if (currentImageIndex < imagePaths.length - 1) {
            currentImageIndex++;
        } else {
            currentImageIndex = 0;
        }
        showImage(carImage, imagePaths, currentImageIndex);
    }
</script>

