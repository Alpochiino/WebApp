@if (TempData["success"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["success"]', 'Success', { positionClass: 'toast-top-right', progressBar: true });
    </script>
}

@if (TempData["error"] != null)
{

    <script type="text/javascript">
        toastr.error('@TempData["error"]', 'Error', { positionClass: 'toast-top-right', progressBar: true });
    </script>
}

