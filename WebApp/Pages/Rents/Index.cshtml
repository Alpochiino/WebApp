@page
@model WebApp.Pages.Rents.IndexModel
@using WebApp.Models
@{
    ViewData["Title"] = "Rent Car";
}

<h2>Available Cars for Rent</h2>

@foreach (var car in Model.Cars)
{
    <div class="card">
        <div id="carouselExampleControls_@car.CarId" class="carousel slide" data-interval="false">
            <div class="carousel-inner">
                @for (var i = 0; i < car.ImagePath.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img class="d-block w-100" src="@car.ImagePath[i]" alt="Image @(i + 1)">
                    </div>
                }
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls_@car.CarId" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls_@car.CarId" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="card-body">
            <h5 class="card-title">@car.Model</h5>
            <p class="card-text">@car.Brand</p>
            <p class="card-text">Year: @car.Year.ToString("yyyy")</p>
            <p class="card-text">Rent Price: @car.Price</p>
            @if (User.Identity.IsAuthenticated)
            {
                if (car.Status == CarStatus.Available)
                {
                    <a asp-page="/Rents/RentCar" asp-route-id="@car.CarId" class="btn btn-primary">Rent Now</a>
                }
                else
                {
                    <button class="btn btn-secondary" disabled>Not Available</button>
                    <p>This car is not available at the moment or it's already rented.</p>
                }
            }
            else
            {
                <p>Please <a asp-page="/Users/Login">login</a> to rent this car.</p>
            }
            <a asp-page="/Rents/Details" asp-route-id="@car.CarId" class="btn btn-primary">Details</a>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_CarouselFunctionsPartial");
    }
}
