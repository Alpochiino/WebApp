@page
@model WebApp.Pages.Rents.RentCarModel

@{
    ViewData["Title"] = "Rent Car";
}


<h2 class="text-center mt-4">Rent Car</h2>

<div class="container mt-4 text-center">
    <form method="post">
        <div class="form-group row">
            <label for="startDate" class="col-sm-0 col-form-label">Start Date:</label>
            <div class="col-sm-4 mx-auto">
                <input type="datetime-local" class="form-control" name="startDate" id="startDate" required onchange="calculateTotalPrice()" />
            </div>
        </div>
        <div class="form-group row">
            <label for="endDate" class="col-sm-0 col-form-label">End Date:</label>
            <div class="col-sm-4 mx-auto">
                <input type="datetime-local" class="form-control" name="endDate" id="endDate" required onchange="calculateTotalPrice()" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-0 col-form-label">Total Price:</label>
            <div class="col-sm-4 mx-auto">
                <span id="totalPrice" class="form-control">@Model.TotalPrice</span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-0 col-form-label">Car Image:</label>
            <div class="col-sm-4 mx-auto">
                <div class="image-container">
                    @if (Model.Car.ImagePath != null && Model.Car.ImagePath.Any())
                    {
                        <img src="@Url.Content(Model.Car.ImagePath.First())" alt="Car Image" class="car-image" style="width: 255px; height: 175px;">
                    }
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-8 mx-auto">
                <button type="submit" class="btn btn-primary">Rent Now</button>
            </div>
        </div>
    </form>

    <div class="row mt-3">
        <div class="col-sm-8 mx-auto">
            <a asp-page="/Rents/Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>




@section Scripts {
    <script>
        function calculateTotalPrice() {
            var startDate = new Date(document.getElementById("startDate").value);
            var endDate = new Date(document.getElementById("endDate").value);

            if (isNaN(startDate) || isNaN(endDate)) {
                console.error("Invalid date format");
                return;
            }

            var totalPrice = parseFloat("@Model.Price");
            var numberOfDays = Math.ceil((endDate - startDate) / (1000 * 60 * 60 * 24));
            var increasePrice = 500; //If you want to change the price you need to do the same in RentCar.cshtml.cs!!!!
            totalPrice += increasePrice * numberOfDays;

            document.getElementById("totalPrice").innerText = totalPrice.toFixed(2);
        }
    </script>
}

