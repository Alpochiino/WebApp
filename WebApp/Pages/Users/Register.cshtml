@page "/Users/Register"
@model WebApp.Pages.Users.RegisterModel

<link rel="stylesheet" href="~/css/EntryForms.css" />

@{
    ViewData["Title"] = "Register";
}

<h1>Friberg Car Rentals AB</h1>

<h2>Sign up</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Model.Username" class="label-left"></label>
        <input asp-for="Model.Username" class="form-control" />
        <span asp-validation-for="Model.Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model.Email" class="label-left"></label>
        <input asp-for="Model.Email" class="form-control" />
        <span asp-validation-for="Model.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model.Password" class="label-left"></label>
        <input asp-for="Model.Password" type="password" class="form-control" />
        <span asp-validation-for="Model.Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model.FirstName" class="label-left"></label>
        <input asp-for="Model.FirstName" class="form-control" />
        <span asp-validation-for="Model.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model.LastName" class="label-left"></label>
        <input asp-for="Model.LastName" class="form-control" />
        <span asp-validation-for="Model.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model.PhoneNumber" class="label-left"></label>
        <input asp-for="Model.PhoneNumber" class="form-control" />
        <span asp-validation-for="Model.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Register" class="btn btn-primary" />
    </div>
</form>

<div class="form-group">
    <a asp-page="./Login" class="secondary-btn">Back to Login</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}