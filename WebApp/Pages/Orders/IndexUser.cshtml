@page "/Orders/IndexUser"
@model WebApp.Pages.Orders.IndexUserModel

@{
    ViewData["Title"] = "My Orders";
}

<h2>Current Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Price</th>
            <th>User ID</th>
            <th>Car ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ViewModel.CurrentOrders)
        {
            <tr>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.TotalPrice.ToString("0.##")</td>
                <td>@item.UserId</td>
                <td>@item.CarId</td>
                <td>
                    <a asp-page="./DeleteOrder" asp-route-id="@item.OrderId">Cancel Order</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Previous Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Total Price</th>
            <th>User ID</th>
            <th>Car ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ViewModel.PreviousOrders)
        {
            <tr>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>@item.TotalPrice.ToString("0.##")</td>
                <td>@item.UserId</td>
                <td>@item.CarId</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}